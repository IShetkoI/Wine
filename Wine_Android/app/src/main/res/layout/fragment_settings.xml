<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/set"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ecf0f3"
    tools:context=".Settings">

    <RelativeLayout
        android:id="@+id/main_holder"
        android:layout_width="match_parent"
        android:layout_height="571dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Settings">

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/fg"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="373dp"
            android:layout_height="79dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:neumorph_shadowColorDark="#43556F9A"
            app:neumorph_shapeType="pressed">

            <EditText
                android:id="@+id/edit"
                android:layout_width="300dp"
                android:layout_height="59dp"
                android:background="@drawable/no_background"
                android:fontFamily="sans-serif-light"
                android:hint="ip address"
                android:inputType="text"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/text_color"
                android:textColorHint="#384B6C"
                android:textCursorDrawable="@drawable/cursor" />

        </soup.neumorphism.NeumorphCardView>

        <soup.neumorphism.NeumorphButton
            android:id="@+id/save_ip_button"
            style="@style/Widget.Neumorph.Button"
            android:layout_width="373dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fg"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="sans-serif-light"
            android:text="Save IP"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="18sp"
            app:neumorph_shadowColorDark="#43556F9A" />

        <soup.neumorphism.NeumorphCardView
            android:id="@+id/NeumorphCardView"
            style="@style/Widget.Neumorph.CardView"
            android:layout_width="wrap_content"
            android:layout_height="214dp"
            android:layout_below="@+id/save_ip_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:neumorph_shadowColorDark="#43556F9A"
            tools:ignore="ExtraText">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/ed_header3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/no_background"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/cardview_compat_inset_shadow"
                    android:text="Max "
                    android:textColor="@color/text_color"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/max"
                    style="@style/Widget.Neumorph.CardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="46dp"
                    android:layout_marginBottom="10dp"
                    android:minWidth="83dp"
                    android:minHeight="59dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:neumorph_shadowColorDark="#43556F9A"
                    app:neumorph_shapeType="pressed">

                    <EditText
                        android:id="@+id/ed_max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/no_background"
                        android:digits="1234567890."
                        android:fontFamily="sans-serif-light"
                        android:inputType="number"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:minWidth="59dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textColor="@color/text_color"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="24sp"
                        tools:ignore="RtlCompat" />
                </soup.neumorphism.NeumorphCardView>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:fontFamily="sans-serif-light"
                    android:text="cm"
                    android:textColor="@color/text_color"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/ed_header2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/no_background"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/cardview_compat_inset_shadow"
                    android:text="Min
"
                    android:textColor="@color/text_color"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ed_header" />

                <soup.neumorphism.NeumorphCardView
                    android:id="@+id/min"
                    style="@style/Widget.Neumorph.CardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="46dp"
                    android:minWidth="83dp"
                    android:minHeight="59dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ed_header"
                    app:neumorph_shadowColorDark="#43556F9A"
                    app:neumorph_shapeType="pressed">

                    <EditText
                        android:id="@+id/ed_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:background="@drawable/no_background"
                        android:digits="1234567890."
                        android:fontFamily="sans-serif-light"
                        android:inputType="number"
                        android:maxLength="16"
                        android:maxLines="1"
                        android:minWidth="59dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text="0"
                        android:textAlignment="textEnd"
                        android:textColor="@color/text_color"
                        android:textCursorDrawable="@drawable/cursor"
                        android:textSize="24sp"
                        tools:ignore="RtlCompat" />
                </soup.neumorphism.NeumorphCardView>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="sans-serif-light"
                    android:text="cm"
                    android:textColor="@color/text_color"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ed_header" />

                <TextView
                    android:id="@+id/tv_quan_cherta2"
                    android:layout_width="117dp"
                    android:layout_height="1dp"
                    android:alpha="70"
                    android:background="@color/text_color"
                    android:fontFamily="sans-serif-light"
                    android:text="TextView"
                    android:textColor="#90A4AE"
                    app:layout_constraintEnd_toEndOf="@+id/ed_header"
                    app:layout_constraintStart_toStartOf="@+id/ed_header"
                    app:layout_constraintTop_toBottomOf="@+id/ed_header" />

                <TextView
                    android:id="@+id/ed_header"
                    android:layout_width="254dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/no_background"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/cardview_compat_inset_shadow"
                    android:text="Calibration"
                    android:textColor="@color/text_color"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </soup.neumorphism.NeumorphCardView>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
