<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/middle"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_width="140dp"
            android:layout_height="155dp"
            android:visibility="visible"
            android:layout_marginStart="116dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="216dp"
            android:id="@+id/imLogo"
            android:layout_marginLeft="120dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="97dp"
            android:layout_height="57dp"
            android:visibility="visible"
            android:layout_marginEnd="120dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="372dp"
            android:id="@+id/tvName"
            android:layout_marginRight="120dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/middle">
        <Constraint
            android:layout_height="97dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="92dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="86dp"
            android:id="@+id/imLogo"
            android:layout_marginTop="16dp" />
        <Constraint
            android:layout_marginEnd="80dp"
            android:layout_height="57dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="80dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="97dp"
            android:id="@+id/tvName" />
        <Constraint
            android:layout_height="129dp"
            android:layout_marginTop="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="85dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            android:id="@+id/ivThreeTree" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="78dp"
            android:layout_height="98dp"
            android:visibility="visible"
            android:layout_marginEnd="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:id="@+id/imTwoTree"
            motion:layout_editor_absoluteX="282dp" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="97dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="92dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="86dp"
            android:id="@+id/imLogo"
            android:layout_marginTop="16dp" />
        <Constraint
            android:layout_marginEnd="80dp"
            android:layout_height="57dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="80dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="97dp"
            android:id="@+id/tvName" />
        <Constraint
            android:layout_height="129dp"
            android:layout_marginTop="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="85dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            android:id="@+id/ivThreeTree" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="78dp"
            android:layout_height="98dp"
            android:visibility="visible"
            android:layout_marginEnd="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:id="@+id/imTwoTree"
            motion:layout_editor_absoluteX="282dp" />
        <Constraint
            android:id="@+id/main_holder"
            android:layout_width="match_parent"
            android:layout_height="561dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="90dp"
            android:visibility="visible"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/bHome"
            android:layout_width="90dp"
            android:layout_height="90dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/bHistory"
            motion:layout_constraintStart_toEndOf="@+id/bHome"
            android:layout_width="90dp"
            android:layout_height="90dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/bCalc"
            motion:layout_constraintEnd_toStartOf="@+id/bSettings"
            android:layout_width="90dp"
            android:layout_height="90dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/bSettings"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible" />
    </ConstraintSet>

    <Transition
        motion:constraintSetStart="@+id/middle"
        motion:constraintSetEnd="@+id/end"
        motion:autoTransition="animateToEnd" />
</MotionScene>